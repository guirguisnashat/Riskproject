<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background"
    android:id="@+id/map">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="520dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/images" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blackcircle"
        android:padding="15dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/draft"
        android:text="10"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:onClick="skip"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="reset"
        android:text="Reset"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/texas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="65dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/kansas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_above="@id/texas"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/oklahoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kansas"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/newmexico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toLeftOf="@id/oklahoma"
        android:layout_below="@id/oklahoma"
        android:layout_marginHorizontal="70dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/colorado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/newmexico"
        android:layout_toLeftOf="@id/kansas"
        android:layout_margin="50dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/arizona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toLeftOf="@id/colorado"
        android:layout_above="@id/newmexico"
        android:layout_marginHorizontal="10dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/utah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/colorado"
        android:layout_above="@id/newmexico"
        android:layout_marginVertical="50dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/nevada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_toLeftOf="@id/utah"
        android:layout_above="@id/arizona"
        android:layout_margin="35dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/california"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toLeftOf="@id/nevada"
       android:layout_above="@id/arizona"
        android:layout_marginVertical="20dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/idaho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/california"
        android:layout_above="@id/arizona"
        android:layout_marginVertical="85dp"
        android:layout_marginHorizontal="60dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/oregon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/california"
        android:layout_above="@id/california"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="10dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/washington"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/california"
        android:layout_toRightOf="@id/california"
        android:text="0"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="85dp"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/montana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_above="@id/colorado"
        android:layout_toRightOf="@id/washington"
        android:text="0"
        android:layout_marginVertical="20dp"
         android:layout_marginHorizontal="50dp"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/wyoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/utah"
        android:layout_below="@id/montana"
        android:text="0"
        android:layout_marginHorizontal="20dp"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/northdakota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/montana"
        android:layout_above="@id/wyoming"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/southdakota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/northdakota"
       android:layout_toLeftOf="@+id/kansas"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/nebraska"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_above="@id/kansas"
        android:layout_toLeftOf="@id/kansas"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/wisconsin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/northdakota"
        android:layout_above="@id/southdakota"
        android:layout_marginHorizontal="35dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/lowa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/southdakota"
        android:layout_toRightOf="@id/southdakota"
        android:layout_marginHorizontal="35dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/minnesota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/southdakota"
        android:layout_toRightOf="@id/southdakota"
        android:layout_marginHorizontal="25dp"
        android:text="0"
        android:layout_marginVertical="10dp"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/michigan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wisconsin"
        android:layout_toRightOf="@id/wisconsin"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/illinois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wisconsin"
        android:layout_toRightOf="@id/minnesota"
        android:layout_marginVertical="35dp"
        android:layout_marginHorizontal="20dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/indiana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toEndOf="@id/illinois"
        android:layout_below="@id/michigan"
        android:text="0"
        android:layout_marginVertical="20dp"

        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/ohio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/indiana"
        android:layout_below="@id/michigan"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="15dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/missouri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lowa"
       android:layout_toRightOf="@id/kansas"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="15dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/arkansas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/oklahoma"
        android:text="0"
        android:layout_below="@id/missouri"
        android:layout_marginHorizontal="20dp"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/mississippi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/arkansas"
        android:layout_toRightOf="@id/arkansas"
        android:layout_marginHorizontal="10dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/louisiana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mississippi"
        android:layout_toLeftOf="@id/mississippi"
        android:layout_marginHorizontal="13dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/alabama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arkansas"
        android:layout_toRightOf="@id/mississippi"
        android:layout_marginHorizontal="10dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/georgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arkansas"
        android:layout_toRightOf="@id/alabama"
        android:layout_marginHorizontal="10dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/florida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/georgia"
        android:layout_toRightOf="@id/georgia"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="28dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tennessee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ohio"
        android:layout_toLeftOf="@id/ohio"
       android:layout_marginVertical="15dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/kentucky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/michigan"
        android:layout_toRightOf="@id/illinois"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="15dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/westvirginia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/lowa"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="3dp"
        android:layout_toRightOf="@id/ohio"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/southcarolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_above="@id/georgia"
        android:layout_toRightOf="@id/georgia"
        android:layout_marginHorizontal="10dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/northcarolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/southcarolina"
        android:layout_toRightOf="@id/southcarolina"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/virginia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/northcarolina"
        android:layout_toRightOf="@id/southcarolina"
        android:layout_marginVertical="8dp"

        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/pennsylvnia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/virginia"
        android:layout_toRightOf="@id/westvirginia"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="8dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/newyork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pennsylvnia"
        android:layout_toRightOf="@id/pennsylvnia"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/maine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/newyork"
        android:layout_toRightOf="@id/newyork"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="5dp"
        android:text="0"
        android:background="@color/black"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white" />

</RelativeLayout>